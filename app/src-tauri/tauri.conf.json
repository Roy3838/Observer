{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Observer",
  "version": "1.2.0",
  "identifier": "Observer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Observer",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true, 
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../dist"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true, 
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDExODcyRkI1MDUwRDkyRUIKUldUcmtnMEZ0UytIRVMxZWEvcEFsZHQzRmlCZWZONjlDVENKOUFnUWk3d1ZVZERkU2tvOUFlTjgK",
      "endpoints": [
        "https://github.com/Roy3838/Observer/releases/latest/download/latest.json"
      ]
    }
  }
}
